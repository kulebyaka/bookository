@using BookProgress.Web.Helpers
@using BookProgress.Web.Helpers.Utils

@{
    ViewBag.Title = "ErrorAjax";
    ViewBag.ModalWidth = 900;
    ViewBag.ModalType = "danger";
    ViewBag.ModalIcon = "frown-o";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";

    var exception = (Exception)ViewBag.Exception;
}

@section title {
    <i class="fa fa-frown-o" style="font-size: 1.8em;"></i>&nbsp;&nbsp;Ooops! Error occured
}

@section buttons {
    @Html.BtButton("Close", ButtonType.Default, null, false, new { @class = "modal-close" })
}

<pre class="modal-error-stacktrace">
    <strong>@exception.Message.Replace("\n", "<br>")</strong>
    <br />
    <br />
    @Html.Raw(exception.StackTrace.Replace("\n", "<br>"))
</pre>

